<input type="range" min="@Min" max="@Max" @bind-value="@CurrentValue"
       @bind-value:event="oninput"/>
<span>@CurrentValue</span>
@code {
    [Parameter]
    int Min { get; set; }

    [Parameter]
    int Max { get; set; }

    private int _currentValue;

    [Parameter]
    int CurrentValue
    {
        get => _currentValue;
        set
        {
            if (value != _currentValue)
            {
                _currentValue = value;
                CurrentValueChanged?.Invoke(value);
            }
        }
    }

    [Parameter]
    Action<int> CurrentValueChanged { get; set; }
    
}
